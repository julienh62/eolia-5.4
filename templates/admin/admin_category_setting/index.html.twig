{% extends 'base.html.twig' %}

{% block title %}CategorySetting index{% endblock %}

{% block body %}
    <h1>CategorySetting index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TextColor</th>
                <th>BackGroundColor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_setting in category_settings %}
            <tr>
                <td>{{ category_setting.id }}</td>
                <td>{{ category_setting.textColor }}</td>
                <td>{{ category_setting.backGroundColor }}</td>
                <td>
                    <a href="{{ path('app_admin_category_setting_show', {'id': category_setting.id}) }}">show</a>
                    <a href="{{ path('app_admin_category_setting_edit', {'id': category_setting.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_setting_new') }}">Create new</a>
{% endblock %}
